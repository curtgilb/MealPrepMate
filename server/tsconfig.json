{
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "NodeNext",
    "target": "es2022",
    "strict": false,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDirs": ["src"],
    "outDir": "dist",
    "types": ["node"],
    "noEmitOnError": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
